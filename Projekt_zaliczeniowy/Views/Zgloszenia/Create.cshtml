@model Projekt_zaliczeniowy.Models.Zgloszenie
@{
    ViewData["Title"] = "Nowe zgłoszenie";
}

<h1>Nowe zgłoszenie</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Tytul" class="control-label">Tytuł problemu</label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Opis" class="control-label">Opis szczegółowy</label>
                <textarea asp-for="Opis" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="KategoriaId" class="control-label">Kategoria</label>
                <select asp-for="KategoriaId" class="form-control" asp-items="ViewBag.KategoriaId"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PriorytetId" class="control-label">Priorytet</label>
                <select asp-for="PriorytetId" class="form-control" asp-items="ViewBag.PriorytetId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Wyślij zgłoszenie" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}