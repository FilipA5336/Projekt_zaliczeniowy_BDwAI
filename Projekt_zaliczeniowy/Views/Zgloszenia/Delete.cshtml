@model Projekt_zaliczeniowy.Models.Zgloszenie

<h1>Usuń zgłoszenie</h1>
<h3>Czy na pewno chcesz usunąć to zgłoszenie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Model.Tytul</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Opis</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Anuluj</a>
    </form>
</div>