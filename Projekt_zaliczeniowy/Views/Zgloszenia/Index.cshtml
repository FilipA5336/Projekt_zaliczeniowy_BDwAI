@model IEnumerable<Projekt_zaliczeniowy.Models.Zgloszenie>

@{
    ViewData["Title"] = "Lista zgłoszeń";
}

<style>
   

    
    .btn-solid-blue {
        background-color: #17a2b8 !important;
        color: white !important;
        border: 1px solid #17a2b8;
        border-radius: 4px; 
    }

        .btn-solid-blue:hover {
            background-color: #138496 !important;
        }

   
    .btn-solid-yellow {
        background-color: #fd7e14 !important;
        color: white !important;
        border: 1px solid #fd7e14;
        border-radius: 4px;
    }

        .btn-solid-yellow:hover {
            background-color: #e36d0d !important;
        }

    
    .btn-solid-red {
        background-color: #e74c3c !important;
        color: white !important;
        border: 1px solid #e74c3c;
        border-radius: 4px;
    }

        .btn-solid-red:hover {
            background-color: #c0392b !important;
        }

   
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #212529 !important; 
        color: white !important;
        padding: 12px 15px !important;
        vertical-align: middle !important;
    }

    td {
        padding: 12px 15px !important;
        vertical-align: middle !important;
    }

    
    .badge-solid-critical {
        background-color: #dc3545 !important;
        color: white !important;
    }

    .badge-solid-high {
        background-color: #fd7e14 !important;
        color: white !important;
    }

    .badge-solid-normal {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .badge-solid-low {
        background-color: #198754 !important;
        color: white !important;
    }
</style>


<div class="d-flex justify-content-between align-items-center mb-3 mt-3">
    <h2>Lista Zgłoszeń</h2>
    <a asp-action="Create" class="btn btn-primary px-4 py-2 shadow-sm">
        + Nowe zgłoszenie
    </a>
</div>


<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Priorytet</th>
                    <th>Kategoria</th>
                    <th>Data zgłoszenia</th>
                    <th>Autor</th>
                    
                    <th class="text-center" style="width: 280px;">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @item.Tytul
                        </td>

                        <td>
                            @if (item.Priorytet?.Nazwa == "Krytyczny")
                            {
                                <span class="badge rounded-pill badge-solid-critical px-3 py-2">@item.Priorytet?.Nazwa</span>
                            }
                            else if (item.Priorytet?.Nazwa == "Wysoki")
                            {

                                <span class="badge rounded-pill badge-solid-high px-3 py-2">@item.Priorytet?.Nazwa</span>
                            }
                            else if (item.Priorytet?.Nazwa == "Niski")
                            {

                                <span class="badge rounded-pill badge-solid-low px-3 py-2">@item.Priorytet?.Nazwa</span>
                            }
                            else
                            {

                                <span class="badge rounded-pill badge-solid-normal px-3 py-2">@item.Priorytet?.Nazwa</span>
                            }
                        </td>

                        <td>
                            @item.Kategoria?.Nazwa
                        </td>

                        <td>
                            @item.DataUtworzenia.ToString("dd.MM.yyyy")
                            <span class="text-muted ms-1 small">@item.DataUtworzenia.ToString("HH:mm")</span>
                        </td>

                        <td class="small">
                            @item.UzytkownikId
                        </td>

                        <td class="text-center">
                            
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-solid-blue" title="Szczegóły">
                                    Szczegóły
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-solid-yellow" title="Edytuj">
                                    Edytuj
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-solid-red" title="Usuń">
                                        Usuń
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center mt-4">
        Brak zgłoszeń w systemie.
    </div>
}