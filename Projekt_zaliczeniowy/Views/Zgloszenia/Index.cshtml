@model IEnumerable<Projekt_zaliczeniowy.Models.Zgloszenie>

@{
    ViewData["Title"] = "Lista zgłoszeń";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista zgłoszeń</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj nowe zgłoszenie
    </a>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Tytuł</th>
            <th>Priorytet</th>
            <th>Kategoria</th>
            <th>Data zgłoszenia</th>
            <th>Autor</th>
            <th class="text-center">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td class="fw-bold">
                    @item.Tytul
                </td>
                <td>
                  
                    @if (item.Priorytet?.Nazwa == "Krytyczny")
                    {
                        <span class="badge rounded-pill bg-danger">@item.Priorytet?.Nazwa</span>
                    }
                    else if (item.Priorytet?.Nazwa == "Wysoki")
                    {
                        <span class="badge rounded-pill bg-warning text-dark">@item.Priorytet?.Nazwa</span>
                    }
                    else if (item.Priorytet?.Nazwa == "Niski")
                    {
                        <span class="badge rounded-pill bg-success">@item.Priorytet?.Nazwa</span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-secondary">@item.Priorytet?.Nazwa</span>
                    }
                </td>
                <td>
                    @item.Kategoria?.Nazwa
                </td>
                <td>
                    @item.DataUtworzenia.ToString("dd.MM.yyyy HH:mm")
                </td>
                <td>
                    <small class="text-muted">@item.UzytkownikId</small>
                </td>
                <td class="text-center">
                    
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white mx-1">
                        Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mx-1">
                        Edytuj</a>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                            Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        Brak zgłoszeń w systemie. Dodaj pierwsze zgłoszenie!
    </div>
}